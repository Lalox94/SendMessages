<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lalo.sendmessages.Fragments.StoreProductListTab">



    <android.support.v7.widget.SearchView
        android:id="@+id/searchViewProduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">
    </android.support.v7.widget.SearchView>

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:id="@+id/textViewTotal"
        android:layout_height="50dp"
        android:layout_below="@+id/searchViewProduct"
        android:gravity="center"
        android:textSize="20dp"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:text="TOTAL = $0.00 PESOS"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewProductsFragment"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_above="@+id/buttonOrder"
        android:layout_below="@id/textViewTotal"
        android:layout_alignParentStart="true"
        android:scrollbars="vertical">

    </android.support.v7.widget.RecyclerView>

    <Button
        android:theme="@style/AppTheme.Button"
        android:id="@+id/buttonOrder"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="Ordenar" />


</RelativeLayout>
